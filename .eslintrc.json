{
    "env": {
        "browser": true,
        "es6": true,
        "cypress/globals": true,
        "jest/globals": true
    },
    "extends": [
        "airbnb-base",
        "plugin:import/typescript",
        "plugin:jest/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "@typescript-eslint/no-unused-vars": ["error"],
        "import/extensions": ["warn", {"js": "always", "json": "always"}]
    },
    "settings": {
        "import/resolver": {
            "typescript": {}
        }
    },
    "plugins": [
        "cypress",
        "jest",
        "@typescript-eslint"
    ]
}
