{
    "env": {
        "browser": true,
        "es6": true,
        "cypress/globals": true,
        "jest/globals": true
    },
    "extends": [
        "airbnb-base",
        "plugin:jest/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "import/extensions": ["warn", {"js": "always", "json": "always"}]
    },
    "plugins": [
        "cypress",
        "jest"
    ]
}
